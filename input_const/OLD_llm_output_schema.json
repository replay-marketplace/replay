{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "description": "List of files with paths and contents",
    "items": {
      "type": "object",
      "required": ["path_and_filename", "contents"],
      "properties": {
        "path_and_filename": {
          "type": "string",
          "description": "Full path and filename of the file"
        },
        "contents": {
          "type": "string",
          "description": "Contents of the file"
        }
      }
    }
  }